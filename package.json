{
  "name": "@asset-pipe/js-writer",
  "version": "0.0.0-development",
  "author": {
    "name": "Trygve Lie",
    "email": "post@trygve-lie.com"
  },
  "description": "Javascript asset feed writer",
  "main": "./lib/writer.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/asset-pipe/asset-pipe-js-writer"
  },
  "keywords": [
    "javascript",
    "assets"
  ],
  "contributors": [
    {
      "name": "Trygve Lie",
      "email": "post@trygve-lie.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/asset-pipe/asset-pipe-js-writer/issues"
  },
  "license": "MIT",
  "dependencies": {
    "asset-pipe-common": "^1.0.0",
    "browserify": "^16.2.3",
    "readable-stream": "^3.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "JSONStream": "^1.3.5",
    "asset-pipe-test-es5a": "^1.0.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.0.1",
    "eslint-config-finn": "^3.0.1",
    "eslint-config-finn-prettier": "^3.0.2",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "semantic-release": "^15.13.2"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "jest --coverage",
    "lint:format": "eslint --fix .",
    "lint:commit": "commitlint --from=HEAD~1",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "semantic-release": "semantic-release"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      },
      {
        "files": ".eslintrc",
        "options": {
          "parser": "json",
          "tabWidth": 2
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --config ./.eslintrc",
      "git add"
    ],
    "{*.json,*.md,.eslintrc}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
